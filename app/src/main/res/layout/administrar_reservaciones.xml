<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/gris_paleta"
    tools:context=".PublicacionesFavoritasActivity">

    <TextView
        android:id="@+id/tv_reservaciones"
        android:layout_width="200dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:background="@drawable/cuadricular_edit_text"
        android:text="Reservaciones"
        android:textSize="25sp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_regresar"
        android:layout_below="@id/recycler_reservaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Regresar"
        android:backgroundTint="@android:color/holo_blue_dark"/>

    <TextView
        android:alpha="0.1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/logo_sin_letras"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_reservaciones"
        android:layout_width="match_parent"
        android:layout_height="710dp"
        android:layout_below="@id/tv_reservaciones"
        android:layout_marginTop="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp" />



</RelativeLayout>