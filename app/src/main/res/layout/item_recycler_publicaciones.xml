<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_titulo_publicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titulo:"
                android:textStyle="bold"
                android:textSize="11sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"/>
            <TextView
                android:id="@+id/tv2_titulo_publicacion"
                android:layout_toRightOf="@id/tv_titulo_publicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:text="fasdds"/>

            <TextView
                android:id="@+id/tv_descripcion_publicacion"
                android:layout_below="@id/tv_titulo_publicacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripcion:"
                android:textStyle="bold"
                android:textSize="11sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"/>
            <TextView
                android:id="@+id/tv2_descripcion_publicacion"
                android:layout_below="@id/tv_titulo_publicacion"
                android:layout_toRightOf="@id/tv_descripcion_publicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="6dp"
                android:text="fasdds"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:layout_below="@id/tv_descripcion_publicacion">

                <ImageButton
                    android:id="@+id/imageButton_favorito_publicacion"
                    android:background="@color/white_personalizado"
                    android:layout_width="102.5dp"
                    android:layout_height="60dp"
                    android:src="@drawable/heart"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#969797"/>

                <Button
                    android:id="@+id/btn_ver_publicacion"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Ver publicacion"
                    android:backgroundTint="@android:color/holo_blue_dark"
                    android:gravity="center_horizontal"
                    android:layout_weight="1"

                    android:textColor="@color/black"/>

            </LinearLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>