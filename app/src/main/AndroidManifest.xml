<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_letras"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_letras"
        android:supportsRtl="true"
        android:theme="@style/Theme.Rent4Xalapa"
        tools:targetApi="31">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key"/>
        <activity
            android:name=".EditarPerfilActivity"
            android:exported="false" />
        <activity android:name=".RevisarPerfilActivity"
            android:exported="false"/>
        <activity android:name=".RegisterActivity"
            android:exported="false"/>
        <activity android:name=".PrincipalPublicacionesActivity"
            android:exported="false"/>
        <activity android:name=".PublicacionesFavoritasActivity"
            android:exported="false"/>
        <activity android:name=".RealizarPublicacionesActivity"
            android:exported="false"/>
        <activity android:name=".RealizarCitaActivity"
            android:exported="false"/>
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>